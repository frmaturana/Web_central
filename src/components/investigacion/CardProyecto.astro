---
interface Props {
	body: string;
	href: string;
    color: string;
}
const { href, body, color } = Astro.props;
---

<div class="container">
    <div class="row">
        <p>{body}</p>
        <p><a href={`${href}`} class={`${color}`}>{href}</a></p>
    </div>
</div>

<style>
    .verde{
        color: #a1c400;
    }

    .azul{
        color: #5680fb;
    }
</style>